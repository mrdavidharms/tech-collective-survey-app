
<div class= "most-body">
  <p>
    <h1><%= "#{@survey.title}" %> </h1>
    <h2><%= "for #{@survey.group}"%></h2>
    <div class="edit-survey-name">
      <%= link_to "Edit Survey Name and Group", edit_survey_path(@survey) %>
    </div>
  </p>
  <div class ="questions">
    <% @questions.each do |question| %>
  </div>

        <%= button_to "Answers for: #{question.body}",  question_answers_path(question, @answers), class: 'button success radius small', method: :get %>
          <div class="column">
            <div class= "question-body">
              <%= link_to "preview question", new_question_answer_path(question, @answer) %>
            </div>
            <div class= "button-tiny-edit-question">
              <%= button_to "Edit Question", edit_survey_question_path(@survey, question), class: "tiny-button", method: :get  %>
            </div>
            <div class= "button-tiny-delete-question">
              <%= button_to "Delete Question", survey_question_path(@survey, question), class: "tiny-button", method: :delete %>
            </div>
          </div>
        <% end %>
            <div class="row">
              <div class= "add-button">
                <%= button_to "Add Question", new_survey_question_path(@survey, @question), class: "button-round", method: :get  %>
              </div>
            </div>
          </div>
</div>
