<h1><%= @question.body%></h1>
<div class = "box">
  <div class ="text-header">
    <h3><%= 'Answer' %></h3>
  </div>
  <div class ="rating-header">
    <h3><%= 'Rating' %></h3>
  </div>
    <% @answers.each do |answer| %>
    <% binding.pry%>
    <%unless answer.answer == nil%>
    <div class = "text-answer">
    <%= "#{answer.answer}"%>
    </div>
      <% end %>
      <%unless answer.rating_answer == nil%>
        <div class = "rating-answer">
      <%= "#{answer.rating_answer}"%>
        </div>

</div>
      <% end %>
    <% end %>
