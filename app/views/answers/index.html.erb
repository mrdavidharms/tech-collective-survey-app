<h1><%= @question.body%></h1>
<div class = "box">
  <div class ="text-header">
    <h3><%= 'Answer' %></h3>
  </div>
  <div class ="rating-header">
    <h3><%= 'Rating' %></h3>
  </div>
    <% @answers.each do |answer| %>
    <%if answer.rating_answer != nil%>
      <div class = "rating-answer">
    <%= "#{answer.rating_answer}"%>
      </div>
      <%else answer.answer != nil%>
      <div class = "text-answer">
      <%= "#{answer.answer}"%>
      </div>
</div>
      <% end %>
    <% end %>
